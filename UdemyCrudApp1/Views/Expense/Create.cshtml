@model UdemyCrudApp1.Models.ViewModels.ExpenseVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Expense.ExpenseName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expense.ExpenseCost"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Expense.Category"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Expense.ExpenseName" class="form-control" />
                        <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Expense.ExpenseCost" class="form-control" />
                        <span asp-validation-for="Expense.ExpenseCost" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <select asp-for="Expense.CategoryId" asp-items="@Model.CategoryDropDown" class="form-control">
                            <option selected>---Select Category---</option>
                        </select>
                        <span asp-validation-for="Expense.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row my-4">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{<partial name = "_ValidationScriptsPartial"/>}
}